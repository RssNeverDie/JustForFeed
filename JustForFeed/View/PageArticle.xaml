<Page x:Class="JustForFeed.View.PageArticle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustForFeed.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageArticle">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width" VerticalAlignment="Center">
            <Button x:Name="button" Content="查看原文" Width="75" Click="button_Click" d:LayoutOverrides="TopPosition, BottomPosition" Margin="10,0,0,0"/>
            <Button x:Name="button1" Content="浏览器中打开" HorizontalAlignment="Left" Width="75" Click="button1_Click" Margin="10,0,0,0"/>

        </StackPanel>

        <WebBrowser x:Name="webbr"  Grid.Row="1"/>

    </Grid>
</Page>
