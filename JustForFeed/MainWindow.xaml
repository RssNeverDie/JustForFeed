<Window x:Class="JustForFeed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustForFeed"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="只为订阅" Height="768" Width="1024">
    <Window.Resources>
        <DataTemplate x:Key="DataTemplate1">
            <Grid>
                <TextBlock Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate2">
            <DockPanel HorizontalAlignment="Stretch">
                <TextBlock Text="{Binding Title,UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                <CheckBox Command="{Binding StarArticleCommand,UpdateSourceTrigger=PropertyChanged}" IsChecked="{Binding IsStarred,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" DockPanel.Dock="Right"></CheckBox>
            </DockPanel>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate1">
            <VirtualizingStackPanel IsItemsHost="True"/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Window.DataContext>
        <Binding Path="Main" Source="{StaticResource Locator}"></Binding>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" MinWidth="10"/>
            <ColumnDefinition Width="120*" MinWidth="10"/>
            <ColumnDefinition Width="300*" MinWidth="10"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" d:LayoutOverrides="Height" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="添加订阅源" Command="{Binding AddNewFeedCommand}" Width="75" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" Margin="0,0,0,5" />
                <Button x:Name="button" Content="移除订阅源" Command="{Binding RemoveFeedCommand}" Margin="0,5,0,0" Width="75"/>
            </StackPanel>
            <ListView Grid.Row="1" ItemsSource="{Binding NewFeeds}" SelectedItem="{Binding CurrentFeed}" ItemTemplate="{DynamicResource DataTemplate1}" />
        </Grid>
        <GridSplitter x:Name="gridSplitter" Width="5"/>
        <ListView x:Name="listarticle" Grid.Column="1"  ItemTemplate="{DynamicResource DataTemplate2}" ItemsSource="{Binding CurrentFeed.Articles}" SelectedItem="{Binding CurrentArticle}" ItemsPanel="{DynamicResource ItemsPanelTemplate1}" Margin="0,0,5,0"></ListView>
        <GridSplitter x:Name="gridSplitter1" Width="5" Grid.Column="1"/>
        <Frame  x:Name="frame"  Grid.Column="2" NavigationUIVisibility="Hidden" >
        </Frame>
    </Grid>
</Window>
